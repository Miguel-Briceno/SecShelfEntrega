<div class="max-w-96 mx-auto">    
    <div class="max-w-32 text-left">
            {{ include('components/goBack.html.twig') }}
    </div>
       {{ form_start(form, {'attr': {'class': 'max-w-md mx-auto mt-10 bg-white rounded-lg shadow-md overflow-hidden px-4 py-4'}}) }}
    
    <div class="mb-4">
        {{ form_label(form.productBrand, 'Product Brand', {'label_attr': {'class': 'block text-gray-700 text-sm font-bold mb-2'}}) }}
        {{ form_widget(form.productBrand, {'attr': {'class': 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline'}}) }}
    </div>
    
    <div class="mb-4">
        {{ form_label(form.productName, 'Product Name', {'label_attr': {'class': 'block text-gray-700 text-sm font-bold mb-2'}}) }}
        {{ form_widget(form.productName, {'attr': {'class': 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline'}}) }}
    </div>
    
    <div class="mb-4">
        {{ form_label(form.productWeight, 'Product Weight', {'label_attr': {'class': 'block text-gray-700 text-sm font-bold mb-2'}}) }}
        {{ form_widget(form.productWeight, {'attr': {'class': 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline'}}) }}
    </div>
    
    <div class="mb-4">
        {{ form_label(form.productModel, 'Product Model', {'label_attr': {'class': 'block text-gray-700 text-sm font-bold mb-2'}}) }}
        {{ form_widget(form.productModel, {'attr': {'class': 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline'}}) }}
    </div>
    
    <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
        Save Product
    </button>
    
    {{ form_end(form) }}
</div>
