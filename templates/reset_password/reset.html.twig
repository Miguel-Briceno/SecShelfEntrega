{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}   
    <div class="max-w-md mx-auto mt-6 bg-white rounded-lg shadow-md overflow-hidden px-4 py-4 mb-5">
    <div class="text-center py-2 mb-5">
        <h1 class="font-sans text-3xl tracking-wide font-bold text-blue-700">Reset your password</h1>
    </div>
    {{ form_start(resetForm) }}
    <div class="mb-2">
        <div class="block text-gray-700 text-lg font-bold mb-2">
            {{ form_label(resetForm.plainPassword.first) }}
        </div>
        <div>
            {{ form_widget(resetForm.plainPassword.first, {'attr': {'class': 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline'}}) }}
        </div>
    </div>
    <div class="mb-5">
        <div class="block text-gray-700 text-lg font-bold mb-2">
            {{ form_label(resetForm.plainPassword.second) }}
        </div>
        <div>
            {{ form_widget(resetForm.plainPassword.second, {'attr': {'class': 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline'}}) }}
        </div>
    </div>
     
    <div class="flex flex-col justify-center">
        <button class="cursor-pointer bg-blue-500 hover:bg-blue-700 text-white font-bold  mx-auto py-2 px-4 rounded text-center btnfos-3">Reset password</button>
    </div>    
    {{ form_end(resetForm) }}
</div>
{% for flash_message in app.flashes('success') %}{# successful registration message #} 
    <div class="text-green-800 text-xl py-5 text-center">
        {{ flash_message }}
    </div>
{% endfor %}
{#  ir a login enlace#}
<div class="flex justify-center items-center gap-4 pt-5 text-xl"> 
    <p class="text-lg font-bold">Go to Login</p>
    <a href="{{ path('app_login') }}">
        <img class="max-w-12" src="{{ asset('img/entrar.svg') }}">
    </a>                  
</div>
{% endblock %}
