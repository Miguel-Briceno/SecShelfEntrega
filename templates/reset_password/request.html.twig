{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}   
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="my-10 text-center text-xl text-red-600 font-bold" role="alert">{{ flash_error }}</div>
    {% endfor %}  
    <div class="max-w-md mx-auto mt-6 bg-white rounded-lg shadow-md overflow-hidden px-4 py-4 mb-5">
    <div class="text-center py-2 mb-5">
        <h1 class="font-sans text-3xl tracking-wide font-bold text-blue-700">Reset your password</h1>
    </div>
    {{ form_start(requestForm) }}
    <div class="mb-5 "> 
        <div>
            {{ form_row(requestForm.email, {'attr': {'class': 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline'}}) }}
        </div>
    </div>    
    <div class="flex flex-col justify-center">
        <button class="cursor-pointer bg-blue-500 hover:bg-blue-700 text-white font-bold  mx-auto py-2 px-4 rounded text-center btnfos-3">Send password reset email</button>
    </div>    
    {{ form_end(requestForm) }}
</div>
{% for flash_message in app.flashes('success') %}{# successful registration message #} 
    <div class="text-green-800 text-xl py-5 text-center">
        {{ flash_message }}
    </div>
{% endfor %}
{#  ir a login enlace#}
<div class="flex justify-center items-center gap-4 pt-5 text-xl"> 
    <p class="text-lg font-bold">Go to Login</p>
    <a href="{{ path('app_login') }}">
        <img class="max-w-12" src="{{ asset('img/entrar.svg') }}">
    </a>                  
</div>
{% endblock %}
