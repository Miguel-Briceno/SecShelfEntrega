{% extends 'base.html.twig' %}

{% block title %}Basket Details{% endblock %}

{% block body %}
 {{ include('logout/logout.html.twig') }}   <!-- Logout -->
    <div class="flex justify-center ">
        {{ include('components/navBar.html.twig') }}
    </div>
    
    <div class="flex flex-col lg:flex-row mt-5 ">
    <!-- Aside -->  
        
        <aside class="flex-2 px-20">    
            {{ include('_sidebar.html.twig') }}   
        </aside>
        <!-- Main -->
    
       <main class="flex flex-col mt-5 lg:mt-0 justify-center items-center mx-auto">
            <div class="text-center py-2 mb-3">
                <h1 class="mt-8 font-sans text-3xl tracking-wide font-bold text-blue-700">Simulation</h1> 
             </div> 
             <div class="max-w-96 mx-auto">    
                <div class="max-w-32 text-left">
                    {{ include('components/goBack.html.twig') }}
                </div>
                <div>                    
                    <p class="block text-blue-700 text-xl font-bold mb-2 uppercase ">product</p>
                    <p class="block text-gray-700 text-xl font-bold mb-2 ">Product ID: {{ product.id }}</p>
                    <p class="block text-gray-700 text-xl font-bold mb-2 ">Product Name: {{ product.productName }}</p>
                    <p class="block text-gray-700 text-xl font-bold mb-2 ">Product Model: {{ product.productModel }}</p>
                    <p class="block text-gray-700 text-xl font-bold mb-2 ">Product Brand: {{ product.productBrand }}</p>                                     
                    <p class="block text-gray-700 text-xl font-bold mb-2 ">Product Brand: {{ product.productWeight }}</p>                                     
                </div>
                <div>                    
                    <p class="block text-blue-700 text-xl font-bold mb-2 uppercase ">basket</p>
                    <p class="block text-gray-700 text-xl font-bold mb-2 ">Basket ID: {{ basket.id }}</p>
                    <p class="block text-gray-700 text-xl font-bold mb-2 ">Total Weight: {{ basket.totalWeight }}</p>
                    <p class="block text-gray-700 text-xl font-bold mb-2 ">Total Products: {{ basket.numProduct }}</p>
                                                      
                </div>
                <div>
                    <div>
                    <form method="post" action="{{ path('app_admin_pick_up') }}">
                        <div class="mb-4">                            
                            <input type="hidden" name="pickProduct"  value="true">
                            <input type="hidden" name="idBasket"  value="{{ basket.id }}" >                    
                        </div>
                        <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">Pick Product check barcode</button>
                    </form>
                </div>
                </div>
                <div>
                    <div>
                    <form method="post" action="{{ path('app_admin_pick_up') }}">
                        <div class="mb-4">                            
                            <input type="hidden" name="pickProduct"  value="false">
                            <input type="hidden" name="idBasket"  value="{{ basket.id }}" >                    
                        </div>
                        <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">Pick Product No check barcode</button>
                    </form>
                </div>
                </div>
                      
            <div class="py-5 text-center">
                {% for flash_message in app.flashes('success') %}{# successful send message #} 
                <div class="text-green-800 text-xl">
                    {{ flash_message }}
                </div>
                {% endfor %}
            </div>               
</main>
<div>
{% endblock %}
