{% extends 'base.html.twig' %}

{% block title %}Basket Details{% endblock %}

{% block body %}
 {{ include('logout/logout.html.twig') }}   <!-- Logout -->
    <div class="flex justify-center ">
        {{ include('components/navBar.html.twig') }}
    </div>
    
    <div class="flex flex-col lg:flex-row mt-5 ">
    <!-- Aside -->  
        
        <aside class="flex-2 px-20">    
            {{ include('_sidebar.html.twig') }}   
        </aside>
        <!-- Main -->
    
       <main class="flex flex-col mt-5 lg:mt-0 justify-center items-center mx-auto">
            <div class="text-center py-2 mb-3">
                <h1 class="mt-8 font-sans text-3xl tracking-wide font-bold text-blue-700">Simulation</h1> 
             </div> 
             <div class="max-w-96 mx-auto">    
                <div class="max-w-32 text-left">
                    {{ include('components/goBack.html.twig') }}
                </div>  
                <div>                    
                    <p class="block text-blue-700 text-xl font-bold mb-2 uppercase ">product</p>
                    <p class="block text-gray-700 text-xl font-bold mb-2 "><span class="font-bold">Previous product weight:</span> {{ totalWeightBBDD }}</p>
                    <p class="block text-gray-700 text-xl font-bold mb-2 "><span class="font-bold">Current product weight: </span>{{ totalWeightRest }}</p>
                    <p class="block text-gray-700 text-xl font-bold mb-2 "><span class="font-bold">Previous number of products: </span>{{ numProductBBDD }}</p>
                    <p class="block text-gray-700 text-xl font-bold mb-2 "><span class="font-bold">Current number of products: </span>{{ numProductRest }}</p>                                     
                </div>                           
            </div>
            <div>
                <h2 class="text-blue-700 uppercase mt-10 font-bold font-xl">product check</h2>
            </div>
            <div> 
                <form method="post" action="{{ path('app_admin_pick_up') }}">
                    <div class="mb-4">                       
                        <input type="hidden" name="chechBarcode"  value="{{ 'true' }}" >
                        <input type="hidden" name="weightSensor"  value=" {{ totalWeightBBDD }} " >
                        <input type="hidden" name="idBasket"  value=" {{ idBasket }} " >
                    </div>
                    <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">No check barcode</button>
                </form>            
            </div>  
        </div>
        {% if  productOut is defined %}         
        
        <div>
            <h2 class="text-blue-700 uppercase mt-10 font-bold font-xl">product pick up without check: {{ productOut }}</h2>
        </div>
        {% endif %}                
        <div class="text-green-700 text-xl py-5 text-center">
            {% if messagge is defined %}
                {{ messagge }}
            {% endif %}
        </div>                      
                
</main>
</div>
{% endblock %}